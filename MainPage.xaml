<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SudokuDlxMaui.MainPage"
             BackgroundImageSource="pattern_apple_wood.png">

    <Grid RowDefinitions="*, 50">
        <GraphicsView
            x:Name="SudokuPuzzleGraphicsView"
            Grid.Row="0"
            Margin="10"
            HeightRequest="800"
            WidthRequest="800"
            Background="White"
            SizeChanged="OnSizeChanged" />
        <FlexLayout Grid.Row="1" AlignItems="Center" JustifyContent="SpaceBetween" Margin="10">
            <HorizontalStackLayout>
                <Picker
                    WidthRequest="300"
                    Title="Puzzle:"
                    ItemsSource="{Binding Puzzles}"
                    ItemDisplayBinding="{Binding Name}"
                    SelectedItem="{Binding SelectedPuzzle}" />
                <Button
                    Text="Solve"
                    Command="{Binding SolveCommand}" />
            </HorizontalStackLayout>
            <HorizontalStackLayout>
                <Button
                    Text="Show Logs"
                    Command="{Binding GoToLogsPageCommand}" />
            </HorizontalStackLayout>
        </FlexLayout>
    </Grid>

</ContentPage>
