<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SudokuDlxMaui.HomePage"
             xmlns:local="clr-namespace:SudokuDlxMaui">

    <Grid>
        <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="10">
            <Button
                Text="{x:Static local:DemoNames.Sudoku}"
                Command="{Binding NavigateToDemoCommand}"
                CommandParameter="{x:Static local:DemoNames.Sudoku}" />
            <Button
                Text="{x:Static local:DemoNames.Pentominoes}"
                Command="{Binding NavigateToDemoCommand}"
                CommandParameter="{x:Static local:DemoNames.Pentominoes}" />
        </VerticalStackLayout>
    </Grid>

</ContentPage>
