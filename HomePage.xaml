<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SudokuDlxMaui.HomePage"
             xmlns:local="clr-namespace:SudokuDlxMaui">

    <Grid RowDefinitions="*,Auto,*" ColumnDefinitions="*,Auto,*">
        <VerticalStackLayout BindableLayout.ItemsSource="{Binding AvailableDemos}" Grid.Row="1" Grid.Column="1">
            <BindableLayout.ItemTemplate>
                <DataTemplate>
                    <Button
                        Margin="5"
                        Text="{Binding DemoName}"
                        Command="{Binding NavigateToDemoCommand, Source={RelativeSource AncestorType={x:Type local:HomePageViewModel}}}"
                        CommandParameter="{Binding DemoName}" />
                </DataTemplate>
            </BindableLayout.ItemTemplate>
        </VerticalStackLayout>
    </Grid>

</ContentPage>
