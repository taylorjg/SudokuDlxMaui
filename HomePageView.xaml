<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SudokuDlxMaui.HomePageView"
             x:Name="page">

    <Grid RowDefinitions="*,Auto,*" ColumnDefinitions="*,Auto,*">
        <VerticalStackLayout BindableLayout.ItemsSource="{Binding AvailableDemos}" Grid.Row="1" Grid.Column="1">
            <BindableLayout.ItemTemplate>
                <DataTemplate>
                    <Button
                        Margin="5"
                        Text="{Binding DemoName}"
                        Command="{Binding BindingContext.NavigateToDemoCommand, Source={x:Reference page}}"
                        CommandParameter="{Binding DemoName}" />
                </DataTemplate>
            </BindableLayout.ItemTemplate>
        </VerticalStackLayout>
        <Button Text="Test" Command="{Binding NavigateToTestCommand}" />
    </Grid>

</ContentPage>
