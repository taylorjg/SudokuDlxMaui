<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SudokuDlxMaui.HomePageView"
             x:Name="page">

    <Grid RowDefinitions="*,Auto,*" ColumnDefinitions="*,Auto,*">
        <VerticalStackLayout Grid.Row="1" Grid.Column="1" Spacing="50">
            <VerticalStackLayout BindableLayout.ItemsSource="{Binding AvailableDemos}" Spacing="10">
                <BindableLayout.ItemTemplate>
                    <DataTemplate>
                        <Button
                            Text="{Binding DemoName}"
                            Command="{Binding BindingContext.NavigateToDemoCommand, Source={x:Reference page}}"
                            CommandParameter="{Binding Route}" />
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </VerticalStackLayout>
            <Button
                Text="Show Logs"
                Command="{Binding GoToLogsPageCommand}" />
        </VerticalStackLayout>

    </Grid>

</ContentPage>
