<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SudokuDlxMaui.DemoPage"
             BackgroundImageSource="pattern_apple_wood.png"
             Title="{Binding DemoName}">

        <Grid RowDefinitions="*, Auto">
        <GraphicsView
            x:Name="GraphicsView"
            Grid.Row="0"
            Margin="10"
            HeightRequest="800"
            WidthRequest="800"
            Background="White"
            Drawable="{Binding Drawable}"
            SizeChanged="OnSizeChanged" />
        <Grid Grid.Row="1" Margin="10" ColumnDefinitions="*, Auto">
            <HorizontalStackLayout Grid.Column="0" Spacing="10">
                <Picker
                    WidthRequest="300"
                    Title="Puzzle:"
                    ItemsSource="{Binding Puzzles}"
                    ItemDisplayBinding="{Binding Name}"
                    SelectedItem="{Binding SelectedPuzzle}" />
                <Button
                    Text="Solve"
                    Command="{Binding SolveCommand}" />
            </HorizontalStackLayout>
            <HorizontalStackLayout Grid.Column="1">
                <Button
                    Text="Show Logs"
                    Command="{Binding GoToLogsPageCommand}" />
            </HorizontalStackLayout>
        </Grid>
    </Grid>

</ContentPage>
