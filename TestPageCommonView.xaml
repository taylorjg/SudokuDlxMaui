<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SudokuDlxMaui.TestPageCommonView"
             x:Name="commonPage">

  <ContentPage.ControlTemplate>
    <ControlTemplate>
      <Grid RowDefinitions="*,*,*,*">
        <Label
          Grid.Row="0"
          Padding="20"
          HorizontalOptions="Center"
          VerticalOptions="Center"
          Text="Label 1"
          BackgroundColor="Red" />
        <ContentPresenter Grid.Row="1" Content="{TemplateBinding BindingContext.MyView1}" />
          <!-- Text="{TemplateBinding BindingContext.FruitName}" -->
        <Label
          Grid.Row="2"
          Padding="20"
          HorizontalOptions="Center"
          VerticalOptions="Center"
          Text="{Binding BindingContext.FruitName, Source={x:Reference commonPage}}"
          BackgroundColor="Blue" />
        <ContentPresenter Grid.Row="3" Content="{TemplateBinding BindingContext.MyView2}" />
      </Grid>
    </ControlTemplate>
  </ContentPage.ControlTemplate>

</ContentPage>
